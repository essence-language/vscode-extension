{
    "name": "essence-language",
    "displayName": "Essence",
    "description": "Syntax Highlighting for Essence.",
    "version": "0.0.3",
    "publisher": "essence",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/essence-language/vscode-extension.git"
    },
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "contributes": {
        "snippets": [
            {
                "language": "essence",
                "path": "./snippets/essence.code-snippets"
            }
        ],
        "languages": [
            {
                "id": "essence",
                "aliases": [
                    "Essence",
                    "essence"
                ],
                "extensions": [
                    ".es"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "essence",
                "scopeName": "source.essence",
                "path": "./syntaxes/essence.tmLanguage.json"
            }
        ]
    }
}